<h2>Realtime Products</h2>
<hr>

<form id="createForm">
    <div class ="m-2">Title: <input type="text" id="title"></div>
    <div class ="m-2">Description: <input type="text" id="description"></div>
    <div class ="m-2">Price: <input type="text" id="price"></div>
    <div class ="m-2">Code: <input type="text" id="code"></div>
    <div class ="m-2">Stock: <input type="text" id="stock"></div>
</form>
<button id="createBtn" class="btn btn-primary">Create Product</button>
<hr>

<table id="realProductsTable" class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th><strong>Code</strong></th>
            <th><strong>Title</strong></th>
            <th><strong>Description</strong></th>
            <th><strong>Price</strong></th>  
            <th><strong>Stock</strong></th>  
            <th><strong>Button</strong></th>
        </tr>
    </thead>
    <tbody>
        {{#each fileContent}}
        <tr>
            <td>{{this.code}}</td>
            <td>{{this.title}}</td>
            <td>{{this.description}}</td>
            <td>{{this.price}}</td>
            <td>{{this.stock}}</td>
            <td><button class="btn btn-danger" onclick="deleteProduct({{this.id}})">Delete</button></td>
        </tr>
        {{/each}}
    <!-- Puedes agregar más filas aquí -->
    </tbody>
</table>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>

